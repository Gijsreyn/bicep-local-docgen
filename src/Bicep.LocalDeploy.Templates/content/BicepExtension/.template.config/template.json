{
  "$schema": "http://json.schemastore.org/template",
  "author": "Bicep LocalDeploy Contributors",
  "classifications": [ "Bicep", "Extension", "LocalDeploy" ],
  "identity": "Bicep.LocalDeploy.Extension",
  "name": "Bicep Local Deploy Extension",
  "shortName": "bicep-extension",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "MyExtension",
  "preferNameDirectory": true,
  "symbols": {
    "extensionName": {
      "type": "parameter",
      "datatype": "text",
      "replaces": "MyExtension",
      "defaultValue": "MyExtension",
      "description": "The name of the extension"
    },
    "extensionVersion": {
      "type": "parameter",
      "datatype": "text",
      "defaultValue": "0.0.1",
      "description": "The version of the extension"
    }
  }
}
